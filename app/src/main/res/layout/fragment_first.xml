<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33445566"
    tools:context="com.relengxing.rxbus.FirstFragment">
    <TextView
        android:text="FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_normal"
        android:text="接收到的普通事件:"
        android:lines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ToggleButton
        android:id="@+id/btn_normal"
        android:textOn="取消普通事件"
        android:textOff="接收普通事件"
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sticky"
        android:text="接收到的普通事件:"
        android:lines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ToggleButton
        android:id="@+id/btn_sticky"
        android:textOn="取消黏性事件"
        android:textOff="接收黏性事件"
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
